{% extends 'base.html.twig' %}

{% block title %}products | eshop{% endblock %}

{% block body %}
    <div class="container mx-auto pt-11">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 justify-center content-between">
            {% for product in products %}
                <div class="bg-white border border-gray-200 rounded-lg shadow mx-1">
                    <a href="{{ path('app_product_show', {slug: product.slug}) }}">
                        <img class="p-2 mx-auto rounded-t-lg hover:grow" src="https://picsum.photos/300/300?blur=2&random={{ product.id + 1}}" alt="product image" />
                    </a>
                    <div class="px-5 pb-5">
                        <a href="{{ path('app_product_show', {slug: product.slug}) }}">
                            <h5 class="text-xl font-semibold tracking-tight text-gray-900">{{ product.name }}</h5>
                        </a>
                        <div class="flex items-center mt-2.5 mb-5">
                            
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-3xl font-bold text-gray-900">{{ product.price / 100|number_format(2, '.', ' ') }} â‚¬</span>
                            <a href="#" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Add to cart</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
